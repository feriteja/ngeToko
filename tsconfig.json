{
    "compilerOptions": {
      "skipLibCheck": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": "./src",
      "paths": {
        "@router/*": ["./config/router/*"],
        "@redux/*": ["./config/redux/*"],
        "@screens": ["./screens/"],
        "@components": ["./components/"],
        "@constant/*": ["./constant/*"],
      },
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js",
      "typings/browser.d.ts",
      "typings/browser",
    ]
  }